{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wagepoint/heading",
  "title": "Heading",
  "category": "text",
  "icon": "heading",
  "description": "Heading with level and size controls that follow the design system.",
  "keywords": [
    "heading",
    "title",
    "h1",
    "h2",
    "h3"
  ],
  "supports": {
    "html": false,
    "anchor": true,
    "layout": false
  },
  "attributes": {
    "content": {
      "type": "string",
      "default": ""
    },
    "level": {
      "type": "number",
      "default": 4
    },
    "size": {
      "type": "string",
      "default": "inherit"
    },
    "textColor": {
      "type": "string",
      "default": "inherit"
    },
    "textAlignment": {
      "type": "string",
      "default": "inherit"
    },
    "placeholder": {
      "type": "string",
      "default": "Write heading..."
    }
  },
  "textdomain": "wagepoint",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}