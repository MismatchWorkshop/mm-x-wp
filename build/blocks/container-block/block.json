{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wagepoint/container",
  "title": "Container",
  "category": "layout",
  "icon": "admin-page",
  "description": "A flexible container with background and spacing controls.",
  "supports": {
    "html": false,
    "layout": false
  },
  "attributes": {
    "outerBackground": {
      "type": "string",
      "default": "light"
    },
    "spacing": {
      "type": "string",
      "default": "normal"
    },
    "width": {
      "type": "string",
      "default": "normal"
    },
    "containerBackground": {
      "type": "string",
      "default": "white"
    },
    "padding": {
      "type": "string",
      "default": "normal"
    },
    "contentWidth": {
      "type": "string",
      "default": "full"
    },
    "textAlignment": {
      "type": "string",
      "default": "left"
    }
  },
  "textdomain": "wagepoint",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}