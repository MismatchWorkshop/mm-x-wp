{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "custom": false,
      "customGradient": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "payday-blue",
          "color": "#4A90E2",
          "name": "Payday Blue"
        },
        {
          "slug": "payday-blue-tint-1",
          "color": "#8AB4E8",
          "name": "Payday Blue Light"
        },
        {
          "slug": "payday-blue-tint-2",
          "color": "#E3EEF9",
          "name": "Payday Blue Subtle"
        },
        {
          "slug": "ledger-blue",
          "color": "#1E293B",
          "name": "Ledger Blue"
        },
        {
          "slug": "ledger-blue-tint-1",
          "color": "#94A3B8",
          "name": "Ledger Blue Medium"
        },
        {
          "slug": "ledger-blue-tint-2",
          "color": "#E2E8F0",
          "name": "Ledger Blue Light"
        },
        {
          "slug": "form-fill-white",
          "color": "#F8F9FA",
          "name": "Form Fill White"
        },
        {
          "slug": "growth-green",
          "color": "#2ECC71",
          "name": "Growth Green"
        },
        {
          "slug": "growth-green-tint-1",
          "color": "#7EDDA4",
          "name": "Growth Green Light"
        },
        {
          "slug": "growth-green-tint-2",
          "color": "#D4F4E2",
          "name": "Growth Green Subtle"
        },
        {
          "slug": "pto-yellow",
          "color": "#F9B234",
          "name": "PTO Yellow"
        },
        {
          "slug": "pto-yellow-tint-1",
          "color": "#FCDB9A",
          "name": "PTO Yellow Light"
        },
        {
          "slug": "pto-yellow-tint-2",
          "color": "#FEF3DC",
          "name": "PTO Yellow Subtle"
        },
        {
          "slug": "compliance-green",
          "color": "#27AE60",
          "name": "Compliance Green"
        },
        {
          "slug": "compliance-green-tint-1",
          "color": "#8DD4AC",
          "name": "Compliance Green Light"
        },
        {
          "slug": "compliance-green-tint-2",
          "color": "#D9F0E3",
          "name": "Compliance Green Subtle"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        }
      ]
    },
    "typography": {
      "customFontSize": false,
      "fontWeight": true,
      "lineHeight": true,
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "XS"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "SM"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "lg",
          "size": "1.125rem",
          "name": "LG"
        },
        {
          "slug": "xl",
          "size": "1.25rem",
          "name": "XL"
        },
        {
          "slug": "2xl",
          "size": "1.5rem",
          "name": "2XL"
        },
        {
          "slug": "3xl",
          "size": "2rem",
          "name": "3XL"
        },
        {
          "slug": "4xl",
          "size": "2.5rem",
          "name": "4XL"
        },
        {
          "slug": "5xl",
          "size": "3.5rem",
          "name": "5XL"
        },
        {
          "slug": "hero",
          "size": "clamp(2.5rem, 5vw, 4.5rem)",
          "name": "Hero"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "slug": "system",
          "name": "System Font"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": 0,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.5rem",
          "name": "Extra Small"
        },
        {
          "slug": "small",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "2rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "3rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "5rem",
          "name": "Extra Large"
        }
      ]
    },
    "layout": {
      "wideSize": "1200px"
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": false,
          "color": false,
          "style": false,
          "width": false
        },
        "spacing": {
          "padding": false,
          "margin": false
        },
        "shadow": {
          "defaultPresets": false
        },
        "color": {
          "background": true,
          "text": true,
          "custom": false
        },
        "typography": {
          "fontSize": true,
          "fontSizes": [
            { "slug": "small", "size": "0.875rem", "name": "Small" },
            { "slug": "medium", "size": "1rem", "name": "Medium" },
            { "slug": "large", "size": "1.125rem", "name": "Large" }
          ]
        },
        "layout": false
      },
      "core/buttons": {
        "layout": false
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "600"
        },
        "border": {
          "radius": "8px"
        },
        "spacing": {
          "padding": {
            "top": "14px",
            "right": "28px",
            "bottom": "14px",
            "left": "28px"
          }
        },
        ":hover": {
          "color": {
            "background": "#E09D1A"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--dark)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontWeight": "400",
          "lineHeight": "1.1"
        }
      },
      "h2": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h3": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h4": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "background": "transparent"
            },
            "border": {
              "width": "2px",
              "style": "solid"
            }
          }
        }
      }
    }
  }
}